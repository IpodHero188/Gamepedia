<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_open"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gamelibrarycollection.com.gamelibrary.activity.OpenLibraryActivity">

    <gamelibrarycollection.com.gamelibrary.views.EmptyRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/add_library_text"
        android:textSize="36sp" />

</RelativeLayout>
