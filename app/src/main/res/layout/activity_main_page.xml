<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gamelibrarycollection.com.gamelibrary.GamepediaApplication">

    <Button
        android:id="@+id/addBtn"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:text="Create Library"
        android:layout_marginRight="@+id/openBtn"
        android:layout_marginTop="@+id/wishBtn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="@+id/openBtn"
        app:layout_constraintRight_toRightOf="@+id/wishBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/wishBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:text="Delete Library"
        android:layout_marginBottom="@+id/openBtn"
        android:layout_marginLeft="@+id/wishBtn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="@+id/wishBtn"
        app:layout_constraintBottom_toBottomOf="@+id/wishBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wishBtn" />

    <Button
        android:id="@+id/wishBtn"
        android:layout_width="115dp"
        android:layout_height="87dp"
        android:text="Wishlist"
        android:layout_marginBottom="@+id/addBtn"
        android:layout_marginRight="@+id/deleteBtn"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@+id/deleteBtn"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/openBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Open Library"
        android:layout_marginLeft="@+id/addBtn"
        android:layout_marginTop="@+id/deleteBtn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="@+id/addBtn"
        app:layout_constraintBottom_toBottomOf="@+id/addBtn"
        app:layout_constraintRight_toRightOf="@+id/deleteBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/deleteBtn"
        app:layout_constraintTop_toTopOf="@+id/addBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
